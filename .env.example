# ============================================
# ENTERPRISE TODO API - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and configure your secrets
# NEVER commit .env to version control!

# ====================
# JWT Configuration
# ====================
# Generate a secure random key (minimum 32 characters for HMAC-SHA256)
# Use: openssl rand -base64 48
JWT_SECRET_KEY=your-production-secret-key-minimum-32-characters-change-this-immediately

# JWT Issuer (your application name)
JWT_ISSUER=TodoApi

# JWT Audience (your clients)
JWT_AUDIENCE=TodoApiClients

# Token expiration in minutes (default: 60)
JWT_EXPIRES_MINUTES=60

# Refresh token expiration in days (default: 7)
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# ====================
# Database Configuration
# ====================
# PostgreSQL connection string
DATABASE_CONNECTION_STRING=Host=localhost;Database=todo_api_prod;Username=todoapi_user;Password=your_db_password

# ====================
# Redis Configuration
# ====================
# Redis connection string for caching
REDIS_CONNECTION_STRING=localhost:6379,password=your_redis_password,ssl=True

# ====================
# Application Settings
# ====================
# Environment: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Production

# Application URLs
ASPNETCORE_URLS=https://+:443;http://+:80

# ====================
# Observability (Optional)
# ====================
# OpenTelemetry OTLP Endpoint (e.g., Jaeger, Azure Monitor)
OTEL_EXPORTER_OTLP_ENDPOINT=

# ====================
# CORS Configuration (Production)
# ====================
# Comma-separated allowed origins
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ====================
# Security Headers
# ====================
# HTTPS enforcement
ASPNETCORE_FORWARDEDHEADERS_ENABLED=true

# ====================
# Azure Key Vault (Optional - Recommended for Production)
# ====================
# AZURE_KEY_VAULT_URI=https://your-keyvault.vault.azure.net/
# AZURE_CLIENT_ID=your-managed-identity-client-id
# AZURE_TENANT_ID=your-tenant-id

# ====================
# Deployment Notes
# ====================
# 1. Generate a strong JWT secret: openssl rand -base64 48
# 2. Use Azure Key Vault or AWS Secrets Manager for production secrets
# 3. Enable SSL/TLS for PostgreSQL and Redis connections
# 4. Rotate JWT secret keys regularly (every 90 days recommended)
# 5. Use different secrets for each environment (Dev, Staging, Prod)
