{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "TodoApi.Services.TokenService": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=todo_api;Username=postgres;Password=password"
  },
  "Jwt": {
    "Issuer": "TodoApi",
    "Audience": "TodoApiClients",
    "Key": "your-secret-key-at-least-32-characters-long-change-in-production",
    "ExpiresMinutes": 60,
    "RefreshTokenExpiryDays": 7,
    "ClockSkewSeconds": 300
  },
  "OpenTelemetry": {
    "ServiceName": "TodoApi",
    "OtlpEndpoint": "",
    "ConsoleExporterEnabled": false
  }
}
